{
    "$schema": "http://json-schema.org/draft-07/schema#",

    "languageStringType": {
        "$comment": "Reusableb langugage string type",
        "type": "array",
        "items": [
            {
                "type": "object",
                "properties": {
                    "languageCode": {
                        "title": "Language code",
                        "description": "Language code (ISO 639-1)",
                        "type": "string"
                    },
                    "languageText": {
                        "title": "Language text",
                        "description": "Language text",
                        "type": "string"
                    }
                },
                "required": [
                    "languageCode",
                    "languageText"
                ]
            }
        ]
    }
}
