{
    "$schema": "http://json-schema.org/draft-07/schema#",

    "tagType": {
        "$comment": "Custom key-value pairs to extend the DataDoc model with own metadata attributes",
        "type": "array",
        "items": [
            {
                "type": "object",
                "properties": {
                    "key": {
                        "title": "Custom Key",
                        "description": "Custom dataset tag-key, e.g. DatasetFileSize or DataCollectionDate",
                        "type": "string"
                    },
                    "value": {
                        "title": "Custom Value",
                        "description": "Custom dataset tag-value, e.g. 99MB or 2023-06-14",
                        "type": "string"
                    }
                },
                "required": [
                    "key",
                    "value"
                ]
            }
        ]
    }
}