{
    "$schema": "http://json-schema.org/draft-07/schema#",

    "tagType": {
        "$comment": "Custom key-value pairs to extend the DataDoc model with own metadata attributes",
        "type": "array",
        "items": [
            {
                "type": "object",
                "properties": {
                    "key": {
                        "title": "Custom Key",
                        "description": "Custom dataset tag-key, e.g. DatasetFileSize or DataCollectionDate",
                        "type": "string"
                    },
                    "value": 
                    {
                        "title": "Custom Value(s)",
                        "description": "Custom dataset tag-value(s), e.g. 99MB or 2023-06-15",
                        "anyOf": [
                            {
                                "type": "string"
                            }, 
                            {
                                "type": "array",
                                "items": {
                                    "type": "string"
                                }
                            }
                        ]
                    }
                },
                "required": [
                    "key",
                    "value"
                ]
            }
        ]
    }
}